@model School.Models.CreateUserViewModel

@{
    ViewData["Title"] = "Register parent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-5">Register Parent</h1>

<div class="row">
    <div class="col-md-6 offset-md-2 col-sm-8 offset-sm-2">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group form-inline">
                <label asp-for="Parent.FirstName" class="control-label"></label>
                <input asp-for="Parent.FirstName" class="form-control ml-auto" />
                <span asp-validation-for="Parent.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group form-inline">
                <label asp-for="Parent.MiddleName" class="control-label"></label>
                <input asp-for="Parent.MiddleName" class="form-control ml-auto" />
                <span asp-validation-for="Parent.MiddleName" class="text-danger"></span>
            </div>

            <div class="form-group form-inline">
                <label asp-for="Parent.LastName" class="control-label"></label>
                <input asp-for="Parent.LastName" class="form-control ml-auto" />
                <span asp-validation-for="Parent.LastName" class="text-danger"></span>
            </div>

            <div class="form-group form-inline">
                <label asp-for="Parent.Address" class="control-label"></label>
                <input asp-for="Parent.Address" class="form-control ml-auto" />
                <span asp-validation-for="Parent.Address" class="text-danger"></span>
            </div>

            <div class="form-group form-inline">
                <label asp-for="Parent.UserName" class="control-label"></label>
                <input asp-for="Parent.UserName" class="form-control ml-auto" />
                <span asp-validation-for="Parent.UserName" class="text-danger"></span>
            </div>

            <div class="form-group form-inline">
                <label asp-for="Parent.Email" class="control-label"></label>
                <input asp-for="Parent.Email" class="form-control ml-auto" />
                <span asp-validation-for="Parent.Email" class="text-danger"></span>
            </div>

            <div class="form-group form-inline">
                <label asp-for="Parent.PhoneNumber" class="control-label"></label>
                <input asp-for="Parent.PhoneNumber" class="form-control ml-auto" />
                <span asp-validation-for="Parent.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group form-inline">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control ml-auto" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-inline">
                <label asp-for="ReTypePassword" class="control-label"></label>
                <input asp-for="ReTypePassword" class="form-control ml-auto" />
                <span asp-validation-for="ReTypePassword" class="text-danger"></span>
            </div>
            <div class="form-group form-inline">
                <img class="rounded-circle pb-3 w-75" id="img" />
                <input type="file" name="Avatar" accept="image/*" class="form-control" onchange="loadImg(this)" />
            </div>
            <div class="form-group form-inline">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function loadImg(input) {
            let img = document.getElementById('img');
            let reader = new FileReader()
            reader.onload = function (e) {
                img.src = this.result;
                console.log(img)
            }
            reader.readAsDataURL(input.files[0])
        }
    </script>
}
