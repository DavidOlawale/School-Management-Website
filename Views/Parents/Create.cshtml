@model School.Models.Parent

@{
    ViewData["Title"] = "Register parent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-5">Register Parent</h1>

<div class="row">
    <div class="col-md-6 offset-md-2 col-sm-8 offset-sm-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group form-inline">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control ml-auto" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group form-inline">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control ml-auto" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>

            <div class="form-group form-inline">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control ml-auto" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group form-inline">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control ml-auto" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            
            <div class="form-group form-inline">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control ml-auto" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

           <div class="form-group form-inline">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control ml-auto" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group form-inline">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control ml-auto" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            
            <div class="form-group form-inline">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

