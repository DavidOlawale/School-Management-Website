@model School.Models.Class

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Name</h1>
<div class="row">
    <div class="col-sm-8">
        <h2>Teacher</h2>

    </div>
    <div class="col-sm-4 student-side">
        <h3>Students</h3>
        <ul class="list-group">
            @foreach (var student in (IQueryable<Student>)ViewData["students"])
            {
                <li class="list-group-item"><a asp-controller="students" asp-action="Details" asp-route-id="@student.Id">@student.FullName</a></li>
            }
        </ul>
    </div>
</div>

