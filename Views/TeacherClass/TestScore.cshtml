            }
            else
            {
                <h2 class="text-center p-t-3em">Exam Scores</h2>
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <td>Name</td>
                            @foreach (var test in Model.CommercialTests[0].Tests)
                            {
                                <td>@test.DepartmentSubject.Subject.Name</td>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var CommercialTest in Model.CommercialTests)
                        {
                            <tr>
                                <td>@CommercialTest.StudentName</td>
                                @foreach (var test in CommercialTest.Tests)
                                {
                                    <td>@test.Score</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }

    </div>
    <div id="art" class="container tab-pane fade">
        @if (Model.ArtTests.Count == 0)
        {
            <h2 class="text-center opacity-50 p-t-3em">No art student</h2>
