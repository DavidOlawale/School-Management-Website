                <h1 class="text-center">Exam Scores</h1>
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <td>Name</td>
                            @foreach (var test in Model.ArtTests[0].Tests)
                            {
                                <td>@test.DepartmentSubject.Subject.Name</td>
