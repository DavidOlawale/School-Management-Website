                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var CommercialExam in Model.CommercialExams)
                        {
                            <tr>
                                <td>@CommercialExam.StudentName</td>
                                @foreach (var exam in CommercialExam.Exams)
                                {
                                    <td>@exam.Score</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }

    </div>
    <div id="art" class="container tab-pane fade">
