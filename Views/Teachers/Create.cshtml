@model School.Models.CreateUserViewModel

@{
    ViewData["Title"] = "Registeration";
}

<h1>Registeration page</h1>

<h4>New Teacher</h4>
<hr />
<div class="row">
    <div class="offset-lg-2 offset-1 col-md-4 col-6">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Teacher.FirstName" class="control-label"></label>
                <input asp-for="Teacher.FirstName" class="form-control" />
                <span asp-validation-for="Teacher.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Teacher.MiddleName" class="control-label"></label>
                <input asp-for="Teacher.MiddleName" class="form-control" />
                <span asp-validation-for="Teacher.MiddleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Teacher.LastName" class="control-label"></label>
                <input asp-for="Teacher.LastName" class="form-control" />
                <span asp-validation-for="Teacher.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Teacher.EmploymentDate" class="control-label"></label>
                <input asp-for="Teacher.EmploymentDate" class="form-control" />
                <span asp-validation-for="Teacher.EmploymentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Teacher.DOB" class="control-label"></label>
                <input asp-for="Teacher.DOB" class="form-control" />
                <span asp-validation-for="Teacher.DOB" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Teacher.Address" class="control-label"></label>
                <input asp-for="Teacher.Address" class="form-control" />
                <span asp-validation-for="Teacher.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Teacher.UserName" class="control-label"></label>
                <input asp-for="Teacher.UserName" class="form-control" />
                <span asp-validation-for="Teacher.UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Teacher.Email" class="control-label"></label>
                <input asp-for="Teacher.Email" class="form-control" />
                <span asp-validation-for="Teacher.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Teacher.PhoneNumber" class="control-label"></label>
                <input asp-for="Teacher.PhoneNumber" class="form-control" />
                <span asp-validation-for="Teacher.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReTypePassword" class="control-label"></label>
                <input asp-for="ReTypePassword" class="form-control" />
                <span asp-validation-for="ReTypePassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Teacher.ProfileImage"></label>
                <input asp-for="Teacher.ProfileImage" class="form-control" />
                <span asp-validation-for="Teacher.ProfileImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
